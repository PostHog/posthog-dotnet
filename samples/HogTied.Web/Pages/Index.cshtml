@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage)) {
    <div class="alert alert-success mt-3" role="alert">
        @Model.StatusMessage
    </div>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>
        This is a sample web application that demonstrates using the
        PostHog .NET SDK.
    </p>
    @if (Model.UserId is null) {
        <p>You are not logged in.</p>
    }
    else {
        <p>You are logged in with id <code>@Model.UserId</code>.</p>
    }

    @if (!Model.ApiKeyIsSet) {
        <p>
            The  project API key is not set.
            You can use the following command to set the key in the root of
            this project:
            <br />
            <code>script/user-secrets set PostHog:ProjectApiKey your-api-key</code>
        </p>
    }
    else
    {
        <p><strong>The API Key is set! We're ready to go!</strong></p>

        <div class="mt-3">
            Click this button to simulate purchasing a plan:
            <form method="post">
                <button type="submit" class="btn btn-primary">Purchase Plan</button>
            </form>
            <p class="text-muted small">Don't worry, it doesn't do anything but send a PostHog event.</p>
        </div>
    }

    @if (Model.BonanzaEnabled) {
        <p>
            The feature <code>hogtied-homepage-bonanza</code> is enabled!
            You get a bonanza!
        </p>
    }
    else {
        <p>
            The feature <code>hogtied-homepage-bonanza</code> is not
            enabled for you! Sorry, no bonanza!
        </p>
    }
</div>
