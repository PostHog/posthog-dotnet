<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net8.0</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>PostHog</PackageId>
        <Description>A library for interacting with the PostHog Analytics Platform.</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="System.Text.Json" Version="9.0.1" />
        <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.1" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.1" />
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.1" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1' or '$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="System.Threading.Channels" Version="9.0.1" />
        <PackageReference Include="System.Net.Http.Json" Version="9.0.1" />
        <PackageReference Include="Microsoft.Bcl.TimeProvider" Version="9.0.1" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.1" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\"/>
        <None Include="../package-icon.png" Link="package-icon.png" Pack="true" PackagePath="\package-icon.png" />
    </ItemGroup>

    <Target Name="GenerateVersionConstants" BeforeTargets="BeforeBuild">
        <ReadLinesFromFile File="BuildInfo/VersionConstantsTemplate.txt">
            <Output TaskParameter="Lines" ItemName="TemplateLines" />
        </ReadLinesFromFile>
        <WriteLinesToFile
                File="Generated/VersionConstants.cs"
                Lines="/*&#10;   GENERATED FILE! Do not directly modify this file.&#10;   This is generated by an MSBuild task in PostHog.csproj&#10;*/&#10;&#10;namespace PostHog.Versioning%3B;&#10;public static class VersionConstants&#10;{&#10;    public const string Version = &quot;$(Version)&quot;%3B;}&#10;"
                Overwrite="true" />
    </Target>
</Project>
